@using PizzaSite.Models
@model ICollection<Food>
@{
    ViewData["Title"] = "Shoping cart";
}


<div id="container" class="content">
    <div class="container">
        <div id="notification"></div>

        <div id="content">

            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="shopping-cart.html">Shopping Cart</a></li>
            </ol>

            <div class="page-header">
                <h1>Shopping Cart<small>&nbsp;(0.00g)</small></h1>
            </div>

            <form asp-controller="Home" asp-action="Scart" onsubmit="dd(this); return false;" method="post">
                <div class="cart-info table-responsive">

                    <table  class="table table-bordered" >

                        <thead>
                            <tr>
                                <th class="image">Image</th>
                                <th class="name">Product Name</th>
                                <th class="model">Model</th>
                                <th class="quantity">Quantity</th>
                                <th class="price">Unit Price</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Food item in Model)
                            {
                               
                                <tr>
                                    <td class="image">
                                        <a href="margarita.html">
                                            <img src="@item.img" width="60" height="60" alt="Margarita" title="Margarita">
                                        </a>
                                    </td>
                                    <td class="name">
                                        <a href="margarita.html">@item.name</a>
                                        <div>
                                            - <small>Pizza weight: 1200 grs</small><br>
                                        </div>
                                    </td>
                                    <td class="model">@item.name</td>
                                    <td class="quantity">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <button class="btn btn-success" type="image" alt="Update" title="Update"><i class="fa fa-refresh"></i></button>
                                            </span>

                                            <input class="form-control" type="text" name="quantity[44:YToxOntpOjIzNztzOjI6IjE5Ijt9]" value="1" size="1">

                                            <span class="input-group-btn">
                                                <a class="btn btn-danger"  onclick="del(this,'@item.Id')" title="Remove">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="price">
                                        @item.price $
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>


                <div class="cart-total">
                    <table id="total">
                        <tbody>
                            <tr>
                                <td class="text-right">
                                    <strong>Sub-Total:</strong>
                                </td>
                                <td class="text-right">
                                    450.00 $
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Eco Tax (-2.00):</strong>
                                </td>
                                <td class="text-right">
                                    2.00 $
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>НДС 18%:</strong>
                                </td>
                                <td class="text-right">
                                    81.00 $
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Total:</strong>
                                </td>
                                <td class="text-right">
                                    533.00 $
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>


                <div class="buttons">
                    <div class="text-right">
                        
                        <button class="btn btn-success" type="submit">
                            <i class="fa fa-credit-card"></i> <span>Checkout</span>
                        </button>

                        <a href="#" class="btn btn-warning">
                            Continue Shopping <i class="fa fa-long-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
