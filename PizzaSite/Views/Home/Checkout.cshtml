@using PizzaSite.Models
@model ICollection<FoodforTable>
@{
    ViewData["Title"] = "Checkout";
}
<div id="container" class="content">
    <div class="container">
        <div id="notification"></div>

        <div id="content">

            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="shopping-cart.html">Shopping Cart</a></li>
                <li><a href="checkout.html">Checkout</a></li>
            </ol>

            <div class="page-header">
                <h1>Checkout</h1>
            </div>

            <div class="checkout panel-group">
                <form asp-controller="Home" asp-action="Checkout" method="post">
                    <div id="payment-method" class="panel panel-default">
                        <div class="checkout-heading panel-heading">Step 1: Adress</div>
                        <div class="checkout-content panel-body">
                            <h4>Please enter your adress.</h4>


                            <div class="form-group">
                                <label>Add adress</label>
                                <textarea  name="adress" class="form-control" rows="1"></textarea>
                            </div>



                        </div>
                    </div>

                    <div id="payment-method" class="panel panel-default">
                        <div class="checkout-heading panel-heading">Step 2: Contacts</div>
                        <div class="checkout-content panel-body" style="display: none">
                            <h4>Please enter your contacts</h4>


                            <div class="form-group">
                                <label>Add number</label>
                                <textarea name="phonenumber" class="form-control" rows="1"></textarea>
                            </div>


                        </div>
                    </div>

                    <div id="payment-method" class="panel panel-default">
                        <div class="checkout-heading panel-heading">Step 3: Payment Method</div>
                        <div class="checkout-content panel-body" style="display: none">
                            <h4>Please select the preferred payment method to use on this order.</h4>
                            <div class="form-group">
                                <label for="cod">
                                    <input type="radio" name="payment_method" value="cod" id="cod" checked="checked">
                                    Cash On Delivery
                                </label>
                            </div>

                            <div class="form-group">
                                <label>Add Comments About Your Order</label>
                                <textarea name="comment" class="form-control" rows="4"></textarea>
                            </div>

                            <div class="buttons">
                                <div class="checkbox-inline">
                                    <label>
                                        <input type="checkbox" name="agree" value="1">
                                        I have read and agree to the <a class="colorbox" href="http://chef.erpshop.ru/index.php?route=information/information/info&amp;information_id=5" alt="Terms &amp; Conditions"><b>Terms &amp; Conditions</b></a>
                                    </label>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div id="confirm" class="panel panel-default">
                        <div class="checkout-heading panel-heading">Step 4: Confirm Order</div>
                        <div class="checkout-content panel-body" style="display: none">
                            <div class="checkout-product table-responsive">

                                <input type="text" name="jfoods" id="jfoods" hidden="hidden" />
                                <input type="number" name="totalprice"  hidden="hidden" value="@ViewBag.total" />
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="name">Product Name</th>
                                            <th class="model">Model</th>
                                            <th class="quantity">Quantity</th>
                                            <th class="price">Price</th>
                                            <th class="total">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (FoodforTable item in Model)
                                        {
                                            <tr>
                                                <td class="name">
                                                    <a href="margarita.html">@item.food.name</a>
                                                    <br>
                                                    &nbsp;<small> — Pizza size:30 sm</small>
                                                </td>
                                                <td class="model">@item.food.name</td>
                                                <td class="quantity">@item.count</td>
                                                <td class="price">$@item.food.price</td>
                                                <td class="total">$@item.total</td>
                                            </tr>

                                        }


                                    </tbody>


                                    <tfoot>


                                        <tr>
                                            <td colspan="4" class="price text-right">
                                                <b>Total:</b>
                                            </td>
                                            <td class="total">$@ViewBag.total</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <br>
                            <script>
                                function l() {

                                    document.getElementById('jfoods').value = getCookie("username").toString();

                                    document.getElementById('submit3').click();
                                }

                            </script>
                            <button type="submit"  hidden="hidden" id="submit3"></button>
                            <div class="payment">
                                <div class="buttons">
                                    <input type="button" onclick="l()" value="Confirm Order" id="button-confirm" class="btn btn-warning">
                                </div>
                            </div>
                        </div>
                    </div>


                </form>

            </div>

            <script type="text/javascript">
    $(document).on('click', '.checkout-heading', function () {
                    $('.checkout-content').slideUp('slow');
                    $(this).parent().find('.checkout-content').slideDown('slow');
                });</script>




        </div>
    </div>

</div>

