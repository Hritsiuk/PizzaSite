@model CreateItemViewModel
@{
    ViewData["Title"] = "Log in";
}
<form asp-controller="Item" asp-action="Create" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
    <h4>Створення нового товару</h4>
    <hr />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="name"></label>
        <input asp-for="name" class="form-control" type="text" placeholder="Введіть ім'я">
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="price"></label>
        <input asp-for="price" class="form-control" type="number"  placeholder="Введіть ціну">
        <span asp-validation-for="price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="img"></label>
        <input asp-for="img" class="form-control" type="text"  placeholder="Введите пароль">
        <span asp-validation-for="img" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="size"></label>
        <input asp-for="size" class="form-control" type="text"  placeholder="Введите пароль">
        <span asp-validation-for="size" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="idproductcategory"></label>
        <input asp-for="idproductcategory" class="form-control" type="text" placeholder="Введите пароль">
        <span asp-validation-for="idproductcategory" class="text-danger"></span>
    </div>
    <button class="btn btn-submit btn-default bm5" type="submit">Додати</button>
</form>